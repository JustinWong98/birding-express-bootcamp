<!DOCTYPE html>
<html lang="en">
  <%- include ('header', {title: "Single Behaviour"}) %>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="panel panel-default panel-table">
            <div class="panel-heading">
              <div class="row">
                <div class="col col-xs-6">
                  <h3 class="panel-title">Sightings with this behaviour</h3>
                </div>
                <div class="col col-xs-6 text-right">
                  <form action = "" method="GET">
                  <input
                    type="submit"
                    class="btn btn-sm btn-primary btn-create"
                    value = 'Submit a Sighting'
                  >
                  </form>
                  <div class="col col-xs-6 text-right">
                    <form action = "/logout?_method=DELETE" method="POST">
                  <input
                    type="submit"
                    class="btn btn-sm btn-primary btn-create"
                    value = 'Logout'
                  >
                  </form>
                </div>
              </div>
            </div>
            <div class="panel-body">
              <table
                class="table table-striped table-bordered table-list"
                id="myTable"
              >
                <thead>
                  <tr align="center">
                    <th>Settings</th>
                    <th>Sighting ID</th>
                    <th>Name of bird</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let i = 0; i <birdNameResults.length; i+=1) {%>
                  <tr align="center">
                    <td>
                      <form action="" method="GET">
                        <input
                          type="submit"
                          class="btn btn-primary"
                          value="Edit"
                        />
                      </form>
                      <form
                        action="?_method=DELETE"
                        method="POST"
                      >
                        <input
                          type="submit"
                          class="btn btn-danger delete-button"
                          value="Delete"
                        />
                      </form>
                    </td>
                    <td class="hidden-xs">
                      <a href="/note/<%=birdIDResults[i].bird_id%>"> <%=birdIDResults[i].bird_id%> </a>
                    </td>
                    <td><%= birdNameResults[i]%></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
