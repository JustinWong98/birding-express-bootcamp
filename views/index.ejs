<!DOCTYPE html>
<html lang="en">
  <%- include ('header', {title: "Bird Sightings"}) %>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="panel panel-default panel-table">
            <div class="panel-heading">
              <div class="row">
                <div class="col col-xs-6">
                  <h3 class="panel-title">Bird Sighting</h3>
                </div>
                <div class="col col-xs-6 text-right">
                  <button
                    type="button"
                    class="btn btn-sm btn-primary btn-create"
                  >
                    Submit a Sighting
                  </button>
                </div>
              </div>
            </div>
            <div class="panel-body">
              <table
                class="table table-striped table-bordered table-list"
                id="myTable"
              >
                <thead>
                  <tr align="center">
                    <th>Habitat</th>
                    <th>Date</th>
                    <th>Appearance</th>
                    <th>Behaviour</th>
                    <th>Vocalisations</th>
                    <th>Flock Size</th>
                  </tr>
                </thead>
                <tbody>
                  <% notes.forEach ((note) => { %>
                  <tr align="center">
                    <!-- <td>
                    <form action="/sighting/i/edit" method="GET">
                      <input
                        type="submit"
                        class="btn btn-primary"
                        value="Edit"
                      />
                    </form>
                    <form
                      action="/sighting/i?_method=DELETE"
                      method="POST"
                    >
                      <input
                        type="submit"
                        class="btn btn-danger delete-button"
                        value="Delete"
                      />
                    </form>
                  </td>
                  <td class="hidden-xs">
                    <a href="/sighting/i"><i+1> </a>
                  </td> -->

                    <td><%= note.habitat%></td>
                    <td><%= note.date%></td>
                    <td><%= note.appearance%></td>
                    <td><%= note.behaviour%></td>
                    <td><%= note.vocalisations%></td>
                    <td><%= note.flock_size%></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
